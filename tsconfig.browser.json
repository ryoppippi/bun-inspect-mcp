{
  "compilerOptions": {
    // Browser environment
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "target": "ES2020",
    "module": "ESNext",
    "moduleDetection": "force",
    
    // Module resolution
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    
    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    
    // Disable automatic type inclusion
    "types": []
  },
  "include": ["browser-control.ts", "browser-types.ts"],
  "exclude": ["node_modules"]
}